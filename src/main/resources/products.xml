<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="hashMapProductRepository" class="com.chrosciu.shop.products.HashMapProductRepository"/>

    <bean id="productService" class="com.chrosciu.shop.products.ProductService">
        <constructor-arg name="productRepository" ref="hashMapProductRepository"/>
    </bean>

</beans>